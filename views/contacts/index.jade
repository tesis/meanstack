.container
  h1 Contacts List
  div.row.col-md-12.mtb-box

    div.pull-right
      form.form-inline.pull-left
        .form-group
          input.form-control(type="text", data-ng-model="cCtrl.search", placeholder="Search")
          label
            span.pl-10.glyphicon.glyphicon-search

    div.pull-left
      button.btn.btn-info(data-ng-click="cCtrl.openForm()") New contact

    div(data-ng-if="cCtrl.formShow")
      <contact-form></contact-form>

  <contact-list></contact-list>

